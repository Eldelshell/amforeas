<assembly>
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <scope>runtime</scope>
      <excludes>
        <exclude>hsqldb*.jar</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>${project.parent.basedir}/amforeas-core/src/main/resources/</directory>
      <outputDirectory>etc</outputDirectory>
      <includes>
        <include>amforeas.properties</include>
        <include>logback.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/assembly</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>amforeas.sh</include>
      </includes>
    </fileSet>
  </fileSets>
    
</assembly>
