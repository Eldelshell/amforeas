<assembly>
  <id>demo</id>
  <formats>
    <format>zip</format>
  </formats>

  <!-- include all runtime libraries in the /lib folder of the output file -->
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <!-- Put configuration files in conf-->
    <fileSet>
      <directory>src/main/resources/</directory>
      <outputDirectory>/etc</outputDirectory>
      <excludes>
         <!-- the amforeas.properties is generated in runtime -->
        <exclude>*.properties</exclude>
      </excludes>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>src/main/webapp/</directory>
      <outputDirectory>/webapp</outputDirectory>
    </fileSet>
    
    <!-- Put the startup script -->
    <fileSet>
      <directory>src/main/resources/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>amforeas.sh</include>
      </includes>
    </fileSet>
    
    <!-- In demo we include the demo apps -->
    <fileSet>
      <directory>${project.parent.basedir}/extras/extjs/</directory>
      <outputDirectory>/webapp</outputDirectory>
      <includes>
        <include>*/**</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>
