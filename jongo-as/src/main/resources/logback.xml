<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    
  <!-- Console -->  
    
  <appender name="S" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] [%c{1}:%L] [%p] %m%n</pattern>
    </encoder>
  </appender>
  
  <!-- Plain Text Rolling Appender -->
  
  <appender name="MAIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <Append>true</Append>
    <File>${catalina.home}/logs/amforeas/amforeas.log</File>
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] [%c{1}:%L] [%p] %m%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.home}/logs/amforeas/old/amforeas.log.%d{yyyy-MM-dd}</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
  </appender>
  
  <appender name="PERFORMANCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <Append>true</Append>
    <File>${catalina.home}/logs/amforeas/performance.log</File>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %m%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.home}/logs/amforeas/old/performance.log.%d{yyyy-MM-dd}</fileNamePattern>
      <maxHistory>5</maxHistory>
    </rollingPolicy>
  </appender>
  
  <logger name="org.eclipse" level="INFO"/>
  <logger name="com.sun.jersey" level="OFF"/>
  <logger name="org.slf4j" level="OFF"/>
  
  <logger name="amforeas" level="DEBUG">
    <appender-ref ref="MAIN"/>
  </logger>
  
  <logger name="org.amforeas.PerformanceLogger" level="DEBUG">
    <appender-ref ref="PERFORMANCE"/>
  </logger>
  
  
  <root level="INFO">
    <appender-ref ref="S"/>
  </root>
</configuration>